---
import Layout from '../layouts/Layout.astro'
import { RaceCard } from '../components/race-card'
import { getNextEvent } from '../../utils/schedule'
import StandingsCard from '../components/standings-card/index.astro'

const nextEvent = await getNextEvent()
---

<Layout tabTitle='Home | Welcome to the Formula Fan Page' titlePage='Formula Fan Page'>
	<!-- Docs: https://docs.astro.build/en/reference/directives-reference/#clientvisible -->

	<main
		class='flex flex-col md:flex-row gap-4 px-2 justify-items-center items-center md:items-start'
	>
		<RaceCard client:load nextEvent={nextEvent} />
		<StandingsCard driversCount={4} />
	</main>
</Layout>
